{
  "name": "ubereats-api",
  "version": "1.0.0",
  "description": "API with microservices as submodules",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project ./",
    "start": "node dist/app.js",
    "build-start": "npm run build && npm start",
    "dockerize": "npm run docker-stop && npm run docker-rm && npm run docker-build",
    "docker-stop": "docker stop api-gateway || rem",
    "docker-rm": "docker rm api-gateway || rem",
    "docker-build": "docker build -t api-gateway .",
    "docker-run": "docker run -d -p 3000:3000 --name api-gateway api-gateway",
    "kube-clean": "kubectl delete deployment api-gateway-deployment && kubectl delete service api-gateway-service && kubectl delete configmap api-configmap",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Christophe-Ch/ubereats-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Christophe-Ch/ubereats-api/issues"
  },
  "homepage": "https://github.com/Christophe-Ch/ubereats-api#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.12",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/node": "^15.12.4",
    "dotenv": "^10.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
